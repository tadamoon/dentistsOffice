<h1>New Patient Form</h1>

<form action="/existingpatientlookup" method="post">
    <div class="row">
      <div class="col">
        <label for="name">Enter full name</label>
        <input type="text" class="form-control" placeholder="Full name"id="name" name="name">
      </div>
      <div class="col">
        <label for="age">Enter patient age</label>
        <input type="number" class="form-control" placeholder="age" id="age" name="age">
      </div>
