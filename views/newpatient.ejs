        <label for="phone">Enter patient phone</label>
        <input type="number" class="form-control" placeholder="phone number" id="phone" name="phone">
      </div>
      <div class="col">
        <label for="appointment">Enter appointment as mm/dd/yyyy</label>
        <input type="text" class="form-control" placeholder="appointment" id="appt" name="appt">
      </div>
      
    </div>
